<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="TextBlockStyle" TargetType="TextBlock">
    <Setter Property="Width" Value="150" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <DataTemplate x:Key="AboutTemplate">
    <StackPanel Margin="5">
      <WrapPanel Margin="5">
        <TextBlock Style="{StaticResource TextBlockStyle}">Author:</TextBlock>
        <TextBlock Style="{StaticResource TextBlockStyle}">Stoj</TextBlock>
      </WrapPanel>

      <WrapPanel Margin="5">
        <TextBlock Style="{StaticResource TextBlockStyle}">Git:</TextBlock>
        <TextBlock Style="{StaticResource TextBlockStyle}">https://github.com/stojy/ClrVpx</TextBlock>
      </WrapPanel>

      <WrapPanel Margin="5">
        <TextBlock Style="{StaticResource TextBlockStyle}">Contact:</TextBlock>
        <TextBlock Style="{StaticResource TextBlockStyle}">vpx@stoj.net</TextBlock>
      </WrapPanel>

    </StackPanel>
  </DataTemplate>

</ResourceDictionary>