<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:scanner="clr-namespace:ClrVpx.Scanner"
                    xmlns:models="clr-namespace:ClrVpx.Models">

  <DataTemplate x:Key="HitTemplate" DataType="models:Hit">
    <WrapPanel>
      <RadioButton /> <!--todo-->
      <TextBlock Margin="2,0" Width="60" Text="{Binding Type}" />
      <TextBlock Margin="2,0" Text="{Binding Size}" />
      <TextBlock Margin="2,0" Text="{Binding File}" />
    </WrapPanel>
  </DataTemplate>


  <DataTemplate x:Key="ScannerResultsTemplate" DataType="{x:Type scanner:Scanner}">
    <DockPanel>
      <TextBox>Results</TextBox>
    </DockPanel>

  </DataTemplate>

</ResourceDictionary>