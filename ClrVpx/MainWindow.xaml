<Window x:Class="ClrVpx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ClrVpx" WindowState="Normal" Height="600" Width="1920" d:DataContext="{d:DesignData }">

  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="About/About.xaml" />
        <ResourceDictionary Source="Scanner/Scanner.xaml" />
        <ResourceDictionary Source="Settings/Settings.xaml" />
      </ResourceDictionary.MergedDictionaries>

      <DataTemplate x:Key="TabItemHeaderTemplate">
        <TextBlock Text="{Binding}" FontSize="20" Margin="5,0" />
      </DataTemplate>

      <Style TargetType="TabItem">
        <Setter Property="HeaderTemplate" Value="{StaticResource TabItemHeaderTemplate}" />
      </Style>
    </ResourceDictionary>
  </Window.Resources>

  <DockPanel>
    <TextBlock DockPanel.Dock="Top" Margin="10,0,0,10" Text="ClrVpx" VerticalAlignment="Center" FontSize="32" />
    <TabControl>
      <TabItem Header="Scanner">
        <ContentPresenter Content="{Binding Scanner}"  ContentTemplate="{StaticResource ScannerTemplate}" />
      </TabItem>
      <TabItem Header="Rebuilder">
        <!--<ContentPresenter Content="{Binding Scanner}"  ContentTemplate="{StaticResource ScannerTemplate}" />-->
      </TabItem>
      <TabItem Header="Explorer">
        <ContentPresenter Content="{Binding Scanner}"  ContentTemplate="{StaticResource ScannerTemplate}" />
      </TabItem>
      <TabItem Header="Settings">
        <ContentPresenter Content="{Binding Settings}"  ContentTemplate="{StaticResource SettingsTemplate}" />
      </TabItem>
      <TabItem Header="About">
        <ContentPresenter Name="About" Content="{Binding}" ContentTemplate="{StaticResource AboutTemplate}" />
      </TabItem>
    </TabControl>


  </DockPanel>
</Window>