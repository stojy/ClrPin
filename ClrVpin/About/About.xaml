<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:about="clr-namespace:ClrVpin.About">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="..\Styles.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <DataTemplate x:Key="AboutTemplate" DataType="{x:Type about:AboutViewModel}">
    <DataTemplate.Resources>
      <Style TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
      </Style>
    </DataTemplate.Resources>

    <StackPanel Margin="5">
      <WrapPanel>
        <TextBlock Style="{StaticResource MaterialDesignHeadline1TextBlock}" HorizontalAlignment="Center">ClrVpin</TextBlock>
        <TextBlock VerticalAlignment="Bottom" Margin="10,0,0,20" Text="{Binding AssemblyVersion}"/>
      </WrapPanel>
      <Image Source="/Resources/ClrVpin.png" Height="250" Margin="10" />

      <TextBlock Margin="5,10,0,0" FontSize="16">A tool for managing your Visual Pinball collection..</TextBlock>
      <TextBlock Margin="5,0,0,0" FontSize="16">• VPX tables and backglasses</TextBlock>
      <TextBlock Margin="5,0,0,0" FontSize="16">• Front end media (launch audio, table video, wheels, etc)</TextBlock>

      <TextBlock Margin="5,20,0,0">If you've got any questions, please reach out via github..</TextBlock>
      <TextBlock Margin="5,0,0,0">
        <Hyperlink NavigateUri="{Binding GitHubRepoUrl}" Command="{Binding NavigateToGitHubRepoCommand}">
          <TextBlock Text="{Binding GitHubRepoUrl}" FontSize="18" />
        </Hyperlink>
      </TextBlock>

      <TextBlock Margin="5,20,0,0">Author..</TextBlock>
      <TextBlock Margin="5,0,0,0" Foreground="{DynamicResource PrimaryHueDarkBrush}" FontSize="18">
        <Hyperlink NavigateUri="{Binding GitHubAuthorUrl}" Command="{Binding NavigateToGitHubAuthorCommand}">
          <TextBlock Text="{Binding GitHubAuthorUrl}" FontSize="18" />
        </Hyperlink>
      </TextBlock>
    </StackPanel>
  </DataTemplate>

</ResourceDictionary>