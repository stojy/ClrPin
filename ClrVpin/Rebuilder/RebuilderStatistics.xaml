<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:rebuilder="clr-namespace:ClrVpin.Rebuilder">

  <DataTemplate x:Key="RebuilderStatisticsTemplate" DataType="{x:Type rebuilder:RebuilderStatisticsViewModel}">
    <DockPanel>
      <TextBox Margin="5" Text="{Binding Result}" FontFamily="Courier New" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="0"/>
    </DockPanel>
  </DataTemplate>

</ResourceDictionary>