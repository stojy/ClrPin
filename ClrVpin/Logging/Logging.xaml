<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:logging="clr-namespace:ClrVpin.Logging">

  <DataTemplate x:Key="LoggingTemplate" DataType="{x:Type logging:Logging}">
    <DockPanel>
      <ItemsControl ItemsSource="{Binding LogsView}" BorderThickness="5">
        <ItemsControl.ItemTemplate>
          <DataTemplate DataType="logging:Log">
            <TextBlock Margin="0" Text="{Binding Message}" />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </DockPanel>
  </DataTemplate>

</ResourceDictionary>