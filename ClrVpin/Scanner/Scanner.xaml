<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:scanner="clr-namespace:ClrVpin.Scanner"
                    xmlns:models="clr-namespace:ClrVpin.Models">

  <models:HitTypeDescriptionConverter x:Key="HitTypeDescriptionConverter" />

  <DataTemplate x:Key="ScannerTemplate" DataType="{x:Type scanner:Scanner}">
    <DockPanel>
      <WrapPanel DockPanel.Dock="Top">
        <GroupBox Margin="5,5" Padding="0, 5" Header="Content to Scan" DockPanel.Dock="Top">
          <WrapPanel Margin="5,0">
            <StackPanel>
              <CheckBox Margin="5,0" Command="{Binding ConfigureCheckContentTypesCommand}" CommandParameter="{x:Static models:Content.TableAudio}"
                        Content="{x:Static models:Content.TableAudio}" IsChecked="true" />
              <CheckBox Margin="5,0" Command="{Binding ConfigureCheckContentTypesCommand}" CommandParameter="{x:Static models:Content.TableVideos}"
                        Content="{x:Static models:Content.TableVideos}" IsChecked="true" />
              <CheckBox Margin="5,0" Command="{Binding ConfigureCheckContentTypesCommand}" CommandParameter="{x:Static models:Content.LaunchAudio}"
                        Content="{x:Static models:Content.LaunchAudio}" IsChecked="true" />
            </StackPanel>
            <StackPanel>
              <CheckBox Margin="5,0" Command="{Binding ConfigureCheckContentTypesCommand}" CommandParameter="{x:Static models:Content.BackglassVideos}"
                        Content="{x:Static models:Content.BackglassVideos}" IsChecked="true" />
              <CheckBox Margin="5,0" Command="{Binding ConfigureCheckContentTypesCommand}" CommandParameter="{x:Static models:Content.WheelImages}"
                        Content="{x:Static models:Content.WheelImages}" IsChecked="true" />
            </StackPanel>
          </WrapPanel>
        </GroupBox>
      </WrapPanel>

      <WrapPanel>
        <GroupBox Margin="5, 5" Padding="0,5" Header="Check">
          <StackPanel>
            <ItemsControl ItemsSource="{Binding CheckHitTypesView}" BorderThickness="5">
              <ItemsControl.ItemTemplate>
                <DataTemplate DataType="scanner:FeatureType">
                  <CheckBox Margin="0" Content="{Binding Description}" IsChecked="{Binding IsActive}" IsEnabled="{Binding IsSupported}" Command="{Binding SelectedCommand}" />
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </GroupBox>

        <GroupBox Margin="5,5" Padding="0,5" Header="Fix">
          <StackPanel>
            <ItemsControl ItemsSource="{Binding FixHitTypesView}" BorderThickness="5">
              <ItemsControl.ItemTemplate>
                <DataTemplate DataType="scanner:FeatureType">
                  <CheckBox Margin="0" Content="{Binding Description}" IsChecked="{Binding IsActive}" IsEnabled="{Binding IsSupported}" Command="{Binding SelectedCommand}" />
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </GroupBox>

        <WrapPanel VerticalAlignment="Bottom">
          <Button Margin="5" Padding="5" Width="50" Command="{Binding StartCommand}">Start</Button>
        </WrapPanel>
      </WrapPanel>
    </DockPanel>
  </DataTemplate>

</ResourceDictionary>