<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:scanner="clr-namespace:ClrVpin.Scanner"
                    xmlns:models="clr-namespace:ClrVpin.Models">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
    <ResourceDictionary Source="..\Styles.xaml" />
  </ResourceDictionary.MergedDictionaries>

  <models:HitTypeEnumDescriptionConverter x:Key="HitTypeDescriptionConverter" />

  <DataTemplate x:Key="ContentTypeTemplate" DataType="models:FeatureType">
    <CheckBox Width="150" Margin="0" Content="{Binding Description}" ToolTip="{Binding Tip}" IsChecked="{Binding IsActive}" IsEnabled="{Binding IsSupported}"
              Command="{Binding SelectedCommand}" />
  </DataTemplate>

  <DataTemplate x:Key="ScannerTemplate" DataType="{x:Type scanner:ScannerViewModel}">
    <StackPanel Margin="5">

      <!-- content -->
      <TextBlock Style="{StaticResource Title}">Content</TextBlock>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Margin="5" Padding="2" Header="Pinball">
          <ItemsControl ItemsSource="{Binding CheckPinballContentTypesView}" BorderThickness="5" HorizontalAlignment="Left" ItemTemplate="{StaticResource ContentTypeTemplate}" />
        </GroupBox>

        <GroupBox Grid.Column="1" Margin="5" Padding="2" Header="Media">
          <ItemsControl ItemsSource="{Binding CheckMediaContentTypesView}" BorderThickness="5" HorizontalAlignment="Left" ItemTemplate="{StaticResource ContentTypeTemplate}" />
        </GroupBox>
      </Grid>

      <!-- criteria -->
      <TextBlock Style="{StaticResource Title}">Criteria</TextBlock>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <GroupBox Margin="5" Padding="2" Header="Match">
          <ItemsControl ItemsSource="{Binding CheckHitTypesView}" BorderThickness="5">
            <ItemsControl.ItemTemplate>
              <DataTemplate DataType="models:FeatureType">
                <CheckBox Margin="0" Content="{Binding Description}" ToolTip="{Binding Tip}" IsChecked="{Binding IsActive}" IsEnabled="{Binding IsSupported}"
                          Command="{Binding SelectedCommand}" />
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </GroupBox>

        <GroupBox Grid.Column="1" Margin="5" Padding="2" Header="Fix">
          <ItemsControl ItemsSource="{Binding FixHitTypesView}" BorderThickness="5">
            <ItemsControl.ItemTemplate>
              <DataTemplate DataType="models:FeatureType">
                <CheckBox Margin="0" Content="{Binding Description}" ToolTip="{Binding Tip}" IsChecked="{Binding IsActive}" IsEnabled="{Binding IsSupported}"
                          Command="{Binding SelectedCommand}" />
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </GroupBox>
      </Grid>

      <WrapPanel Margin="5">
        <CheckBox ToolTip="When enabled, scanner will show what would be changed without making ANY actual changes. No files will be copied, moved, renamed, or deleted."
                  IsChecked="{Binding Settings.TrainerWheels}" Content="Trainer Wheels"/>
      </WrapPanel>

      <Button Margin="5" Width="50" Command="{Binding StartCommand}" Style="{StaticResource AlternateButton}">Start</Button>
    </StackPanel>
  </DataTemplate>

</ResourceDictionary>