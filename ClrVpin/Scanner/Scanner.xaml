<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:scanner="clr-namespace:ClrVpin.Scanner"
                    xmlns:models="clr-namespace:ClrVpin.Models">

  <models:HitTypeDescriptionConverter x:Key="HitTypeDescriptionConverter" />

  <DataTemplate x:Key="ScannerTemplate" DataType="{x:Type scanner:Scanner}">
    <DockPanel>
      <WrapPanel DockPanel.Dock="Top">
        <GroupBox Margin="5,5" Padding="0, 5" Header="Media to Scan" DockPanel.Dock="Top">
          <WrapPanel Margin="5,0">
            <StackPanel>
              <CheckBox Margin="5,0" Command="{Binding ConfigureMediaTypeCommand}" CommandParameter="{x:Static models:Media.TableAudio}"
                        Content="{x:Static models:Media.TableAudio}" IsChecked="true" />
              <CheckBox Margin="5,0" Command="{Binding ConfigureMediaTypeCommand}" CommandParameter="{x:Static models:Media.TableVideos}"
                        Content="{x:Static models:Media.TableVideos}" IsChecked="true" />
              <CheckBox Margin="5,0" Command="{Binding ConfigureMediaTypeCommand}" CommandParameter="{x:Static models:Media.LaunchAudio}"
                        Content="{x:Static models:Media.LaunchAudio}" IsChecked="true" />
            </StackPanel>
            <StackPanel>
              <CheckBox Margin="5,0" Command="{Binding ConfigureMediaTypeCommand}" CommandParameter="{x:Static models:Media.BackglassVideos}"
                        Content="{x:Static models:Media.BackglassVideos}" IsChecked="true" />
              <CheckBox Margin="5,0" Command="{Binding ConfigureMediaTypeCommand}" CommandParameter="{x:Static models:Media.WheelImages}"
                        Content="{x:Static models:Media.WheelImages}" IsChecked="true" />
            </StackPanel>
          </WrapPanel>
        </GroupBox>
      </WrapPanel>

      <WrapPanel>
        <GroupBox Margin="5, 5" Padding="0,5" Header="Check">
          <StackPanel>
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeCheckCommand}" CommandParameter="{x:Static models:HitType.Missing}"
                      Content="{Binding Source={x:Static models:HitType.Missing}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeCheckCommand}" CommandParameter="{x:Static models:HitType.TableName}"
                      Content="{Binding Source={x:Static models:HitType.TableName}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeCheckCommand}" CommandParameter="{x:Static models:HitType.DuplicateExtension}"
                      Content="{Binding Source={x:Static models:HitType.DuplicateExtension}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeCheckCommand}" CommandParameter="{x:Static models:HitType.WrongCase}"
                      Content="{Binding Source={x:Static models:HitType.WrongCase}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeCheckCommand}" CommandParameter="{x:Static models:HitType.Fuzzy}"
                      Content="{Binding Source={x:Static models:HitType.Fuzzy}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
          </StackPanel>
        </GroupBox>

        <GroupBox Margin="5,5" Padding="0,5" Header="Fix">
          <StackPanel>
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeFixCommand}" CommandParameter="{x:Static models:HitType.Missing}"
                      Content="{Binding Source={x:Static models:HitType.Missing}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeFixCommand}" CommandParameter="{x:Static models:HitType.TableName}"
                      Content="{Binding Source={x:Static models:HitType.TableName}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeFixCommand}" CommandParameter="{x:Static models:HitType.DuplicateExtension}"
                      Content="{Binding Source={x:Static models:HitType.DuplicateExtension}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeFixCommand}" CommandParameter="{x:Static models:HitType.WrongCase}"
                      Content="{Binding Source={x:Static models:HitType.WrongCase}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding ConfigureHitTypeFixCommand}" CommandParameter="{x:Static models:HitType.Fuzzy}"
                      Content="{Binding Source={x:Static models:HitType.Fuzzy}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
          </StackPanel>
        </GroupBox>

        <WrapPanel VerticalAlignment="Bottom">
          <Button Margin="5" Padding="5" Width="50" Command="{Binding StartCommand}">Start</Button>
        </WrapPanel>
      </WrapPanel>
    </DockPanel>
  </DataTemplate>

</ResourceDictionary>