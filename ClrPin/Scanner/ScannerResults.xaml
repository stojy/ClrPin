<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:models="clr-namespace:ClrPin.Models"
                    xmlns:scanner="clr-namespace:ClrPin.Scanner"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:controls="clr-namespace:ClrPin.Controls">


  <ContextMenu x:Key="SmellyGameMediaContextMenu" d:DataContext="{d:DesignInstance models:Hit }">
    <MenuItem Header="Open File" Command="{Binding OpenFileCommand}" IsEnabled="{Binding IsPresent}" />
    <MenuItem Header="Show in Explorer" Command="{Binding ExplorerCommand}" IsEnabled="{Binding IsPresent}" />
    <MenuItem Header="Copy Path" Command="{Binding CopyPathCommand}" />
  </ContextMenu>

  <!--<ContextMenu x:Key="SmellyGameContextMenu">
    <MenuItem Header="Child - Play Table Audio" Command="{Binding PlayCommand}" />
  </ContextMenu>-->

  <Style x:Key="SmellyGameMediaStyle" TargetType="TreeViewItem" d:DataContext="{d:DesignInstance models:Hit}">
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="ContextMenu" Value="{StaticResource SmellyGameMediaContextMenu}" />
    <Setter Property="controls:MouseDoubleClick.Command" Value="{Binding OpenFileCommand}"/>

    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="FontWeight" Value="Bold" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="SmellyGameStyle" TargetType="TreeViewItem" d:DataContext="{d:DesignInstance models:Game}">
    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
    <!--<Setter Property="ContextMenu" Value="{StaticResource SmellyGameContextMenu}"/>-->
    <Setter Property="FontWeight" Value="Normal" />
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="FontWeight" Value="Bold" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <HierarchicalDataTemplate x:Key="SmellyResultTemplate" DataType="models:Hit">
    <TextBlock Text="{Binding Description}" />
  </HierarchicalDataTemplate>

  <HierarchicalDataTemplate x:Key="SmellyGamesItemTemplate" DataType="models:Game"
                            ItemsSource="{Binding Media.SmellyHitsView}"
                            ItemTemplate="{StaticResource SmellyResultTemplate}"
                            ItemContainerStyle="{StaticResource SmellyGameMediaStyle}">
    <TextBlock Text="{Binding Description}" />
  </HierarchicalDataTemplate>

  <models:HitTypeDescriptionConverter x:Key="HitTypeDescriptionConverter" />

  <DataTemplate x:Key="ScannerResultsTemplate" DataType="{x:Type scanner:Scanner}">
    <DockPanel>
      <WrapPanel DockPanel.Dock="Top" Margin="10">
        <TextBlock>Search:</TextBlock>
        <TextBox Width="150" Height="20" VerticalAlignment="Top" Margin="5,0"
                 Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
          <i:Interaction.Triggers>
            <i:EventTrigger EventName="TextChanged">
              <i:InvokeCommandAction Command="{Binding SearchTextCommand}" />
            </i:EventTrigger>
          </i:Interaction.Triggers>
        </TextBox>

        <GroupBox Margin="5,-10" Padding="5" Header="Media">
          <StackPanel Margin="5,0">
            <CheckBox Margin="5,0" Command="{Binding FilterMediaTypeCommand}" CommandParameter="{x:Static models:Media.TableAudio}"
                      Content="{x:Static models:Media.TableAudio}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterMediaTypeCommand}" CommandParameter="{x:Static models:Media.TableVideos}"
                      Content="{x:Static models:Media.TableVideos}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterMediaTypeCommand}" CommandParameter="{x:Static models:Media.BackglassVideos}"
                      Content="{x:Static models:Media.BackglassVideos}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterMediaTypeCommand}" CommandParameter="{x:Static models:Media.LaunchAudio}"
                      Content="{x:Static models:Media.LaunchAudio}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterMediaTypeCommand}" CommandParameter="{x:Static models:Media.WheelImages}"
                      Content="{x:Static models:Media.WheelImages}" IsChecked="true" />
          </StackPanel>
        </GroupBox>

        <GroupBox Margin="5,-10" Padding="0,5" Header="Criteria">
          <StackPanel>
            <CheckBox Margin="5,0" Command="{Binding FilterHitTypeCommand}" CommandParameter="{x:Static models:HitType.Missing}"
                      Content="{Binding Source={x:Static models:HitType.Missing}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterHitTypeCommand}" CommandParameter="{x:Static models:HitType.TableName}"
                      Content="{Binding Source={x:Static models:HitType.TableName}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterHitTypeCommand}" CommandParameter="{x:Static models:HitType.DuplicateExtension}"
                      Content="{Binding Source={x:Static models:HitType.DuplicateExtension}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterHitTypeCommand}" CommandParameter="{x:Static models:HitType.WrongCase}"
                      Content="{Binding Source={x:Static models:HitType.WrongCase}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
            <CheckBox Margin="5,0" Command="{Binding FilterHitTypeCommand}" CommandParameter="{x:Static models:HitType.Fuzzy}"
                      Content="{Binding Source={x:Static models:HitType.Fuzzy}, Converter={StaticResource HitTypeDescriptionConverter}}" IsChecked="true" />
          </StackPanel>
        </GroupBox>

      </WrapPanel>

      <DockPanel DockPanel.Dock="Top" LastChildFill="True" Margin="0,0,5,0">
        <CheckBox DockPanel.Dock="Left" Margin="5,5" Command="{Binding ExpandGamesCommand}"
                  CommandParameter="{Binding Path=IsChecked, RelativeSource={RelativeSource Self}}">
          Expand All
        </CheckBox>

        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Right">
          <TextBlock Text="Total: " />
          <TextBlock Text="{Binding SmellyGames.Count}" />
          <TextBlock Text=" / " />
          <TextBlock Text="{Binding Games.Count}" />
        </WrapPanel>
      </DockPanel>

      <TreeView ItemsSource="{Binding SmellyGamesView}"
                ItemTemplate="{StaticResource SmellyGamesItemTemplate}"
                ItemContainerStyle="{StaticResource SmellyGameStyle}"/>
    </DockPanel>
  </DataTemplate>

</ResourceDictionary>